<Window x:Class="GTAPilot.PrimaryFlightDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GTAPilot"
        Title="PrimaryFlightDisplay"
        Width="1400"
        Height="1000">
    <Grid>

        <local:ZoomBorder x:Name="border"
                          Width="600"
                          Height="600"
                          Background="Gray"
                          ClipToBounds="True">
            <Viewbox>
                <Grid>
                    <Image Name="img" Stretch="None" />
                    <Canvas Name="canvas" />
                </Grid>
            </Viewbox>
        </local:ZoomBorder>
    </Grid>
</Window>
