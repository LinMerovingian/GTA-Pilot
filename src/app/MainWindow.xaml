<Window x:Class="GTAPilot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GTAPilot"
        Title="MainWindow"
        Width="800"
        Height="450">
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="28" />
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <TextBlock>Enqueue:</TextBlock>
                <TextBlock Text="{Binding CaptureEnqueueFPS}" />
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <TextBlock>Dequeue:</TextBlock>
                <TextBlock Text="{Binding CaptureDequeueFPS}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
