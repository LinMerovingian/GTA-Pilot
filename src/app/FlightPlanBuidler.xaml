<Window x:Class="GTAPilot.FlightPlanBuidler"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GTAPilot"
        Title="FlightPlanBuidler"
        Width="800"
        Height="450"
        WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <local:ZoomBorder Background="Gray" ClipToBounds="True">
            <Viewbox>
                <Grid>
                    <Image Name="img"
                           IsHitTestVisible="True"
                           MouseRightButtonDown="img_MouseRightButtonDown"
                           Stretch="None" />
                    <Canvas Name="canvas" />
                </Grid>
            </Viewbox>
        </local:ZoomBorder>

        <StackPanel Grid.Column="1" Orientation="Vertical">
            <TextBlock>
                Flight Plan Positions
            </TextBlock>
        </StackPanel>

    </Grid>
</Window>
