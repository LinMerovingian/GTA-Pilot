<Window x:Class="GTAPilot.MapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GTAPilot"
        Title="MapWindow"
        Width="800"
        Height="450">
    <local:ZoomBorder x:Name="border"
                      Background="Gray"
                      ClipToBounds="True">
        <Viewbox>
            <Grid>
                <Image Name="img"
                       Width="5500"
                       Height="6000"
                       Stretch="None" />
                <Canvas Name="canvas"
                        Width="5500"
                        Height="6000" />
            </Grid>
        </Viewbox>
    </local:ZoomBorder>
</Window>
