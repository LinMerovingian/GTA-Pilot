<Window x:Class="GTAPilot.RecorderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GTAPilot"
        mc:Ignorable="d"
        Title="RecorderWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button Click="Button_Click">Stop Capture</Button>
        <TextBlock Grid.Row="1" Name="lblFramesInBuffer">100000</TextBlock>
    </Grid>
</Window>
